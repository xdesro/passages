 <article class="passage">
    <div class="passage-title-wrapper">
        <h1 class="passage-title{% if passage.isWip %} passage-title--wip{% endif %}">{{ passage.title }}{% if passage.isSelfHosted %}<small>.henry.codes</small>{% endif %}</h1>
        {% if passage.isWip %}<div class="passage-title-tag">Work In Progress</div>{% endif %}
    </div>
    <a class="passage-link{% if passage.url | length <= 0 %} passage-link--disabled{% endif %}" href="{{ passage.url }}" ><span class="visually-hidden">View passage</span></a>
    {% if passage.description %}
        <p class="passage-description">{{ passage.description }}</p>
    {% endif %}
    <ul class="social-icons">
        {%- if passage.githubUrl -%}
            <li class="social-icon">
                <a class="social-icon__link" href="https://github.com/xdesro/{{ passage.githubUrl }}">
                    <span class="visually-hidden">View the GitHub repo</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 17 16">
